 <div class="h-full ml-14 mt-14 mb-10 md:ml-64">

    //- <!-- Container -->
    <div class="container mx-auto">
        <div class="flex justify-center px-6 my-12">
            //- <!-- Row -->
            <div class="w-full xl:w-3/4 lg:w-11/12 flex">
                //- <!-- Col -->
                <div class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"  style="background-image: url('https://images.unsplash.com/photo-1568721721169-dc9a5b5acf7f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8dmVydGljYWwlMjBjYXJ0fGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=500&q=60')"></div>
    
                <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
                    <h3 class="pt-4 text-2xl text-center">Create Admin Account!</h3>
                     -if(message ) 
                        <p class="text-#{alert}-400 mb-7 fw-bold text-center">#{message}</p>
                    <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" action="/admin/addNewAdmin" method="post"  enctype="multipart/form-data"   onsubmit="return validateNewAdminForm()"  name="registrationForm">
                        <div class="mb-2 ">
                            <div class="mb-2 md:mr-2 md:mb-0">
                                <label class="block mb-2 text-sm font-bold text-gray-700" for="name">Full Name
                                </label>
                                <input class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"id="name" type="text" name="name" placeholder="Your Name"   />
                                <p class="text-xs italic text-red-500 error" id="nameErr">  </p>

                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="email">Email
                            </label>
                            <input class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="email" type="email" name="email" placeholder="Email"  />
                            <p class="text-xs italic text-red-500 error" id="emailErr"> </p>

                        </div>
                        <div class="mb-2">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="number">Number
                            </label>
                            <input class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="number" type="number" name="number" placeholder="  Number"  />
                            <p class="text-xs italic text-red-500 error"  id="numberErr"> </p>

                        </div>
                        <div class="mb-2">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="Company">Company
                            </label>
                            <input class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="Company" type="text" name="Company" placeholder="  comapny name"   />
                            <p class="text-xs italic text-red-500 error" id="companyErr"> </p>

                        </div>
                        <div class="mb-2 md:flex md:justify-between">
                            <div class="mb-2 md:mr-2 md:mb-0">
                                <label class="block mb-2 text-sm font-bold text-gray-700" for="password"> Password
                                </label>
                                <input  class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border border-red-500 rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="password" type="password" name="password" placeholder="******************" autocomplete="off"   />
                                <p class="text-xs italic text-red-500 error" id="passwordErr"> </p>
                            </div>
                            <div class="md:ml-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700" for="confirmPassword">Confirm Password
                                </label>
                                <input class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" id="ConfirmPassword" type="password" name="confirmPassword" placeholder="******************"  autocomplete="off"/>
                                <p class="text-xs italic text-red-500 error" id="cPasswordErr"> </p>

                            </div>
                        </div>
                         <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="userImage">Your Image
                            </label>
                             
                             <input  type="file" id="adminImage" name="adminImage"  class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-500 focus:outline-none"   >
                             <p class="text-xs italic text-red-500 error"> </p>

                        </div>
                        <div class="mb-3 text-center">
                            <button class="w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline" type="submit">Register Admin
                            </button>
                        </div>
                        <hr class="mb-3 border-t" />
                        <div class="text-center">
                            <a class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800" href="#">Forgot Password?
                            </a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>


